				<!--Article-->
				<section id="{{= data.beautify_title }}">
					<article class="article {{= data.rubrique.classe }}">
						<h2 class="title">{{= data.title }}</h2>
						<h4 class="author"><a href="{{= data.profile.path }}" class="icon-author" rel="author" title="Auteure"><span class="text">{{= data.profile.pseudo }}</span></a></h4>
						<time class="date icon-date small" pubdate="{{= getDateTime(new Date(data.publishedDate)) }}"><small class="text"><span class="hide">Publi&eacute; le </span>{{= dateToString(new Date(data.publishedDate)) }}</small></time>
						<p class="summary">{{= data.description }}</p>
						<dl class="tags inline-list clearfix">
							<dt><span class="icon-tag small" title="Tags"><strong class="hide">Tags</strong></span></dt>
							<dd><a href="javascript:void(0)" rel="tag" class="label radius {{= data.rubrique.classe }}">{{= data.rubrique.rubrique }}</a></dd>
							<dd><a href="javascript:void(0)" rel="tag" class="label radius inverse">{{= data.category.category }}</a></dd>
							{{~ data.tags : tag }}
								<dd><a href="javascript:void(0)" rel="tag" class="label radius">{{= tag.tag }}</a></dd>
							{{~}}
						</dl>
						{{= data.body }}
						<p class="author text-right"><a href="{{= data.profile.path }}" class="tip-top" rel="author" title="Voir le profil" data-tooltip>{{= data.profile.pseudo }}</a></p>
					</article>
				</section>