<!--Partial Define-->
{{## def.article: data:
								<h4 class="{{= data.rubrique.classe}}">{{= data.rubrique.rubrique }}</h4>
								<div class="href-block clearfix {{= data.rubrique.classe}}">
									<h5 class="title">{{= data.title }}</h5>
									<p class="summary">
										{{? data.publishedDate !== null }}
											<span class="icon-date small" title="Date de publication">Publi&eacute; le </span><time datetime="{{= getDateTime(new Date(data.publishedDate)) }}" class="date">{{= dateToString(new Date(data.publishedDate)) }}</time>
										{{?? data.updatedDate !== null}}
											<span class="icon-date small" title="Date de mise &agrave; jour">Mis &agrave; jour le </span><time datetime="{{= getDateTime(new Date(data.updatedDate)) }}" class="date">{{= dateToString(new Date(data.updatedDate)) }}</time>
										{{?? data.createdDate !== null}}
											<span class="icon-date small" title="Date de cr&eacute;ation">Cr&eacute;&eacute; le </span><time datetime="{{= getDateTime(new Date(data.createdDate)) }}" class="date">{{= dateToString(new Date(data.createdDate)) }}</time>
										{{?}}
										{{= data.description}}
										<span class="right author"><strong>{{= data.profile.pseudo }}</strong></span>
									</p>
									<a href="{{= data.path }}">Lire l&rsquo;article</a>
									{{? articles_list_type == "draft" || articles_list_type == "standby" }}
									<div class="validate" style="display: none;">
										{{? articles_list_type == "draft" }}
										<!--Validation for Drafts-->
											<button class="small">Modifier</button><button class="alert small">Valider</button>
										{{?? articles_list_type == "standby" }}
										<!--Validation for Standbys-->
											<button class="small success">Publier</button><button class="alert small">Renvoyer</button>
										{{?}}
									</div>
									{{?}}
								</div>
#}}
				<!--Articles-->
				<section id="articles">
					{{? window.localStorage.getItem($oursesUserRole) == $role_admin || window.localStorage.getItem($oursesUserRole) == $role_redac }}
					<div class="clearfix">
						<div class="right">
							<a href="{{= $new_article}}" class="icon-article medium" title="R&eacute;diger un nouvel article" data-tooltip></a>
							<label style="font-size: 75%; text-transform: uppercase; color: #999; line-height: 36px; height: 36px; margin: 0 .25rem;">&Eacute;crire</label>
						</div>
					</div>
					{{?}}
					<ul class="no-bullet articles-list draft">
						{{ var articles_list_type = "draft"; }}
						{{~ data.drafts :value }}
							<li>{{# def.article:value }}</li>
						{{~}}
					</ul>
					<ul class="no-bullet articles-list standby">
						{{ var articles_list_type = "standby"; }}
						{{~ data.toCheck :value }}
							<li>{{# def.article:value }}</li>
						{{~}}
					</ul>
					<ul class="no-bullet articles-list">
						{{ var articles_list_type = "undefined"; }}
						{{~ data.onLine :value }}
							<li>{{# def.article:value }}</li>
						{{~}}
					</ul>
				</section>