				<section id="updateAccount">
					<form id="updateBearAccount" class="small-10 small-offset-1 medium-8 medium-offset-2 large-6 large-offset-3" onsubmit="return false;">
						<fieldset>
							<legend>L&acute;adresse mail li&eacute;e &agrave; mon compte</legend>
							<input id="mail" type="text" value="{{= data.mail }}" disabled/>
						</fieldset>
						<fieldset class="callout">
							<legend>Changer mon mot de passe</legend>
							<div>
								<label for="oldPassword">Ancien mot de passe&nbsp;<sup class="medium red">*</sup></label>
								<input id="oldPassword" class="validation-icon" maxlength="20" type="password" autocomplete="off"/>
								<small id="oldPasswordError" class="error hide">Ancien mot de passe requis</small>
							</div>
							<div>
								<label for="newPassword">Nouveau mot de passe&nbsp;<sup class="medium red">*</sup></label>
								<input id="newPassword" class="validation-icon" placeholder="Minimum 7 caract&egrave;res, une minuscule et un chiffre" type="password" maxlength="20" autocomplete="off"/>
								<small id="newPasswordError" class="error hide">Mot de passe invalide (minimum 7 caract&egrave;res dont un chiffre)</small>
							</div>
							<div>
								<label for="confirmPassword">Confirmation du mot de passe&nbsp;<sup	class="medium red">*</sup></label>
								<input id="confirmPassword" class="validation-icon" type="password" maxlength="20" autocomplete="off"/>
								<small id="confirmPasswordError" class="error hide">Confirmation du mot de passe incorrect</small>
							</div>
							<input class="button right" id="confirm" type="submit" value="Valider" />
						</fieldset>
					</form>
				</section>